# Quoted Configuration
# Copy this to .env and fill in your values

# Required: Anthropic API Key for Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Required for voice transcription: OpenAI API Key (for Whisper)
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Deepgram API Key (alternative transcription provider)
# DEEPGRAM_API_KEY=your-deepgram-api-key-here

# Transcription provider: "openai" or "deepgram"
TRANSCRIPTION_PROVIDER=openai

# Environment: "development" or "production"
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=true

# Database URL (SQLite for development, PostgreSQL for production)
# Railway will automatically set DATABASE_URL for PostgreSQL
DATABASE_URL=sqlite+aiosqlite:///./data/quoted.db

# JWT Authentication
# IMPORTANT: Generate a secure secret for production!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=change-this-in-production-to-a-random-string
JWT_EXPIRE_MINUTES=10080

# Claude model to use
CLAUDE_MODEL=claude-sonnet-4-20250514
